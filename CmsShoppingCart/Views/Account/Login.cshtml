@model CmsShoppingCart.Models.ViewModels.Account.LoginUserVM

@{
    /**/

    ViewBag.Title = "Login";
}


@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="login-page">
        <h2 class="text-center">Login</h2>
        <div class="form">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form>

                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "input-alt input" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

                @Html.PasswordFor(model => model.Password, new { @class = "input-alt input" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                <div>
                </div>

                <div class="checkbox">
                    <label for="RememberMe">Remember me</label>
                    @Html.EditorFor(model => model.RememberMe)

                </div>

                <button class="btn-alt" value="LogIn">LogIn </button>
                &nbsp;
                <p class="message">Not Registered? <a href="/account/create-account">Create an Account</a></p>
                <br />
                <a href="#" class="fs-18 cl7 hov-cl1 trans-04 m-r-16" >
                    <img src="~/Images/icons/gg1.JPG" style="width:250px;" />
                </a>
                <br />
                <br />
                <a href="#" class="fs-18 cl7 hov-cl1 trans-04 m-r-16" >
                    <img src="~/Images/icons/fb2.JPG" style="width:250px;" />
                </a>
            </form>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />

}

